@model Domain.ViewModel.Department.DepartmentVm

<div class="row">
    <div class="col-sm-12 default-according">
        <div class="card">
            <div class="card-header p-4">
                <h5>Edit Department</h5>
                <div class="setting-list">
                    <a asp-action="Search" asp-controller="Department" class="btn btn-primary">Search Department</a>
                </div>
            </div>
            <form asp-action="Edit" class="form theme-form">
                @Html.HiddenFor(c => c.Id)
                @Html.HiddenFor(c => c.IsAcademic)
                @Html.Hidden("InitName", Model.Name)
                @Html.Hidden("InitCode", Model.Code)

                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <div class="mb-3 row">
                                <label class="col-sm-3 col-form-label">Department Name</label>
                                <div class="col-sm-9">
                                    <input class="form-control" asp-for="Name" type="text" placeholder="Enter department name">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label class="col-sm-3 col-form-label">Department Code</label>
                                <div class="col-sm-9">
                                    <input class="form-control" asp-for="Code" type="text" placeholder="Enter department code">
                                    <span asp-validation-for="Code" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label class="col-sm-3 col-form-label">Remarks</label>
                                <div class="col-sm-9">
                                    <textarea class="form-control" rows="4" asp-for="Remarks"></textarea>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="card-footer text-end">
                    <div class="col-sm-9 offset-sm-3">
                        <button class="btn btn-primary" type="submit">Update</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>