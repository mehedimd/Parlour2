@model Domain.ViewModel.EmpAttendence.EmpAttendanceReportVm
@{
    ViewData["Title"] = "Empployee Attendance Report";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-sm-12 default-according">
        <form>
            <div class="card">
                <div class="card-header p-4">
                    <h5>Monthly Attendance Report</h5>
                    <div class="setting-list">
                        <button class="btn btn-primary" type="button" id="EmpAttendanceReportBtn">Generate</button>
                    </div>
                </div>
                <div class="card-body table-responsive">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Year</label>
                                        <select asp-for="Year" asp-items="Model.YearLookUp" class="dd-type"></select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Month</label>
                                        <select asp-for="Month" asp-items="Model.MonthLookUp" class="dd-type"></select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Employee</label>
                                        <select asp-for="EmployeeId" asp-items="Model.EmployeeLookUp" class="dd-type"></select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header p-4">
                    <h5>Monthly Attendance Report Details</h5>
                    <div class="setting-list" id="printBtnSection">
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="EmpAttendanceSearchTable" class="table table-bordered" style="width:100%; text-align: center">
                            <thead class="bg-primary">
                                <tr>
                                    <th style="width: 5%">Sl</th>
                                    <th>Employee</th>
                                    <th>Department</th>
                                    <th>Designation</th>
                                    <th>Present</th>
                                    <th>Absent</th>
                                    <th>Leave</th>
                                    <th>Holiday</th>
                                    <th>Offday</th>
                                    <th>Late</th>
                                </tr>
                            </thead>
                            <tbody id="EmpAttendanceSearchTableBody">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
    {
    <script src="~/js/ETL/EmpAttendance/EmpAttendanceReport.js"></script>
}